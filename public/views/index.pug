extends ./layout/structure.pug

block content
  
  div.container
    .banners
      .banner-1
      .other-banners
        .banner-2
        .banner-3

  .container
    .hot-products
      if query 
        p.title
          | # #{query}
      else
        p.title sách mới trong tuần
      hr.ml-2.mr-2
      ul.list 
        each product in products
          .item
            a(href="/products/"+product._id)
              img(src="http://localhost:5001/"+product.image.split("/").slice(1).join("/"), alt="")
            .item-info
              .item-title
                p= product.name
              .button-view
                  a(href="/products/"+product._id) 
                    p $9.99
          